@model IEnumerable<MotorCatalog>
@{
    ViewData["Title"] = "Danh sách Catalog";
}

<h2 class="mb-3">Danh sách Catalog</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<table class="table table-bordered table-hover">
    <thead class="table-dark">
        <tr>
            <th style="width: 150px;">Hình ảnh</th>
            <th>Model</th>
            <th>Công suất</th>
            <th>Điện áp</th>
            <th>Cực</th>
            <th>Kích thước khung</th>
            <th>Chất liệu</th>
            <th>Bảo vệ</th>
            <th>Tiêu chuẩn</th>
            <th>Kiểu lắp đặt</th>
            <th>Đường kính trục</th>
            <th>Footprint</th>
            <th>Công nghệ</th>
            <th>Chi tiết</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @if (item.ImageUrls != null && item.ImageUrls.Any())
                    {
                        <div class="d-flex flex-wrap">
                            @foreach (var imageUrl in item.ImageUrls.Take(3))
                            {
                                <img src="@imageUrl" alt="Hình ảnh @item.Model" class="img-thumbnail" width="70" height="70"
                                    style="margin: 2px; object-fit: cover;">
                            }
                        </div>
                    }
                    else
                    {
                        <span class="text-muted">Không có ảnh</span>
                    }
                </td>
                <td>@item.Model</td>
                <td>@item.Power</td>
                <td>@item.Voltage</td>
                <td>@item.Poles</td>
                <td>@item.FrameSize</td>
                <td>@item.Material</td>
                <td>@item.Protection</td>
                <td>@item.Standard</td>
                <td>@item.MountingType</td>
                <td>@item.ShaftDiameter</td>
                <td>@item.Footprint</td>
                <td>@item.Technology</td>
                <td><a href="@item.URL" target="_blank" class="btn btn-primary btn-sm">Xem</a></td>
            </tr>
        }
    </tbody>
</table>
