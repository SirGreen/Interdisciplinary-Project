@{
    ViewData["Title"] = "Home Page";
}

<div class="container py-5">
    <!-- Row 1: Thiết kế hộp giảm tốc -->
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow-lg rounded-4 border-0 overflow-hidden">
                <div class="row g-0 align-items-center">
                    <!-- text + button -->
                    <div class="col-6 p-4">
                        <h2 class="fw-bold">THIẾT KẾ HỘP GIẢM TỐC</h2>
                        <h2 class="fw-bold">CHO HỆ THỐNG</h2>
                        <h2 class="fw-bold">TRUYỀN ĐỘNG BĂNG TẢI</h2>
                        <a href="/input" class="btn btn-primary btn-lg rounded-pill mt-4">
                            Thiết kế &gt;
                        </a>
                    </div>
                    <!-- hình ảnh -->
                    <div class="col-6 text-center">
                        <img src="~/assets/images/designdraw/giamtoc.png"
                             class="img-fluid rounded-end-4"
                             style="max-height: 400px;"
                             alt="Hộp giảm tốc">
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Row 2: Sơ đồ khối + chú thích -->
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow-lg rounded-4 border-0 overflow-hidden">
                <div class="row g-0 align-items-center">
                    <!-- hình ảnh sơ đồ -->
                    <div class="col-md-6 text-center p-4">
                        <img src="~/assets/images/designdraw/hopgiamtoc.jpg"
                             class="img-fluid rounded-start-4"
                             style="max-height: 400px;"
                             alt="Sơ đồ hộp giảm tốc">
                    </div>
                    <!-- văn bản chú thích -->
                    <div class="col-md-6 p-4">
                        <h3 class="fw-bold">Hộp giảm tốc</h3>
                        <p class="text-muted">
                            (1) làm nguồn cung cấp công suất cho hệ thống, qua khớp nối đàn hồi 
                            (2) tới trục sơ cấp của hộp giảm tốc (3), thay đổi mômen và vận tốc quay, 
                            tiếp tục truyền đến bộ truyền xích (4) làm quay trục tang trống băng tải (5).
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


